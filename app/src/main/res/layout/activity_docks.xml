<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack"
    tools:context="com.mercury.kron.ui.activity.DocksActivity">

    <include
        android:id="@+id/toolbarTop"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textPolz"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/polz"
        android:background="@color/colorBacks"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:drawableRight="@drawable/ic_arrow"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textPolit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/politika"
        android:background="@color/colorBacks"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:drawableRight="@drawable/ic_arrow"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textUslovia"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="Условия использования KRON"
        android:background="@color/colorBacks"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:drawableRight="@drawable/ic_arrow"
        android:textStyle="bold" />


</LinearLayout>
